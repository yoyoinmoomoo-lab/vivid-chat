{
  "manifest_version": 3,
  "name": "Vivid Chat",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://rofan.ai/*",
    "https://rofan.world/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://rofan.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_title": "Open Vivid Chat"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
